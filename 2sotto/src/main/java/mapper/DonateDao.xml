	<!-- 게시 일자 내림차순(먼저 게시한 글 순으로...) -->
	
	<!-- 블로그 포스팅 수 조회 -->
	<select id="getDonationCount" resultType="int">
		select count(*) from donation
	</select>
	
	
	<!-- 후원 글 삭제 삭제 public int deleteEmp(int empno) -->
	<delete id="delete">
		delete from donation where dindex=#{dindex}
	</delete>

	<!-- // 사원 상세정보 보기 public Donate getDetail(int empno) -->
	<select id="detail" resultType="bit.or.eesotto.dto.Donate">
		select * from donation where dindex=#{dindex}
	</select>

	<!-- 후원글 정보 수정 public int updateEmp(Emp emp); -->
	<update id="update" parameterType="bit.or.eesotto.dto.Donate">
		update donation
		set title=#{title}, dobject=#{dobject}, gcoll=#{gcoll},
		content=#{content}
		where dindex=#{dindex}
	</update>

